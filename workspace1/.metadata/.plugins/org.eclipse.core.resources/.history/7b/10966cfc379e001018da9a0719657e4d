package test_fonctionnelle;

import java.awt.Robot;
import java.util.Iterator;

import personnage.Gaulois;
import personnage.Romain;

public class TestGaulois {

	public static void main(String[] args) {
		Gaulois asterix, obelix;

		asterix = new Gaulois("Astérix", 8);
		obelix = new Gaulois("Obélix", 16);
		Romain minus = new Romain("Minus", 6);
		

		asterix.parler("Bonjour" + obelix.getNom() + ".");
		obelix.parler("Bonjour" + asterix.getNom() + "." + "ça te dirais d'aller chasser des sangliers mec ?");
		asterix.parler("Bonjour" + obelix.getNom() + "." + "oui tres bonne idée");
		System.out.println("Dans la forêt " +  asterix.toString() + " et " + obelix.toString() +" tombent nez à nez sur le romain "+ minus.getNom());
		
		for (int i = 0; i < 4; i++) {
			asterix.frapper(minus);
		}
		
	}
}
